Page {
  background: #eee;
}

.user {
  padding: 0;
  background: #fff;
}

.img {
  width: 100%;
  height: 380rpx;
  filter: blur(20px);
  -webkit-filter: blur(20px);
  -moz-filter: blur(20px);
  -ms-filter: blur(20px);
  -o-filter: blur(20px);
  opacity: 0.3;
  padding: -10rpx;
}

.avatar-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.avatar {
  margin: 0 0 0 32rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #eee;
}

.sex {
  position: relative;
  left: -40rpx;
  top: 50rpx;
}

.sex-icon {
  width: 40rpx;
  height: 40rpx;
}

.user-info {
  display: flex;
  position: absolute;
  top: 10rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 250px;
  left: 50%;
  margin-left: -125px;
}

.nickname {
  font-size: 1.1em;
  font-weight: bold;
}

.school {
  font-size: 0.9em;
  font-family: serif;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.motto {
  margin-top: 10rpx;
  font-size: 0.8em;
  font-family: cursive;
}

.age-male {
  margin-left: 20rpx;
  color: #4fb7f4;
  text-align: center;
  position: relative;
}

.age-female {
}

.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  background: #eee;
  -webkit-overflow-scrolling: touch;
}

.weui-flex {
  margin-top: 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
}

.weui-flex__item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.weui-flex__item_like {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 30px;
}

.weui-flex__item_share {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 30px;
}

.moment {
  position: relative;
  background-color: #fff;
  margin-bottom: 10px;
  padding: 10px;
}

.moment_userInfo {
  overflow: hidden;
  margin-left: 10px;
}

.user_avatar {
  display: inline-block;
}

.username {
  margin-top: 6px;
  position: absolute;
  top: 0;
  display: inline-block;
}

.arrow {
  display: inline-block;
  position: absolute;
  top: 8px;
  right: 15px;
  width: 25px;
  height: 25px;
}

.moment_btn_area {
  margin-top: 15px;
  border-top: 0.5px solid #f6f4f4;
}

.placeholder {
  display: flex;
  align-items: center;
}

.moment_content {
  margin: 8px 0 10px 10px;
}

.moment_imgs {
  display: block;
  margin-left: 10px;
}

.weui-uploader__img {
  float: left;
  width: 99px;
  height: 99px;
}

.uploader__file {
  display: inline-block;
}
