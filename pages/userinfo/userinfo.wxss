.page {
  padding: 0 100rpx;
  padding-top: 20rpx;
}

.avatar-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: inline-block;
  border: 1px solid #c1c1c1;
}

.camera-container {
  background: #1aad19;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  padding: 10rpx;
  position: relative;
  left: -55rpx;
  bottom: -50rpx;
}

.camera {
  height: 40rpx;
  width: 40rpx;
}

.user-info {
  margin-top: 40rpx;
  line-height: 60rpx;
}

.info-container {
  border-bottom: 1px solid #c1c1c1;
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  margin-bottom: 40rpx;
}

.info-key {
  display: inline-block;
  font-size: 1em;
}

.input {
  margin-left: 20rpx;
  display: inline-block;
  font-size: 1em;
}

.submit-btn {
  margin-top: 40rpx;
}

.motto{
  margin-top: 20rpx;
  margin-right: 100rpx; 
  border: 1px solid #c1c1c1;
  padding: 20rpx 0 0 20rpx;
  width: 95%;
  height: 200rpx;
  background: #eee;
}
