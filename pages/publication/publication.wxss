.map-container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 100rpx;
  left: 0;
  background: red;
}

.map {
  width: 100%;
  height: 100%;
}

.btn-area{
  display: flex;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  background: #eee;
}

.slider{
  flex: 1;
  display: inline-block;
}

.btn{
  background: #1aad19;
  color: #fff;
  text-align: center;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  margin-left: 10rpx;
  border-radius: 15rpx;
}

.btn-active{
  background: #0db60c;
}
