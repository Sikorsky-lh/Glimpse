.page {
  display: flex;
  justify-content: center;
}

.text {
  width: 100%;
  height: 250rpx;
  border: 1px solid #c1c1c1;
  padding: 10rpx;
  margin: 20rpx;
}

.send {
  width: 100%;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #1aad19;
  color: #fff;
  text-align: center;
  font-size: 1.2em;
}

.send-active {
  background: #22a229;
}

.count {
  position: relative;
  right: -82%;
  top: -10rpx;
  color: #c1c1c1;
}
